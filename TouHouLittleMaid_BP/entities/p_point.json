{
    "format_version": "1.16.0",
    "minecraft:entity": {
      "description": {
        "identifier": "touhou_little_maid:p_point",
        "is_spawnable": false,
        "is_summonable": true,
        "is_experimental": false
      },
      "component_groups": {
        "despawn":{ "minecraft:instant_despawn":{ "remove_child_entities": false } },
        "p1":{ "minecraft:variant": { "value": 0 }},
        "p2":{ "minecraft:variant": { "value": 1 }},
        "p3":{ "minecraft:variant": { "value": 2 }},
        "p4":{ "minecraft:variant": { "value": 3 }},
        "f" :{ "minecraft:variant": { "value": 4 }},
        "init":{
          "minecraft:ageable": {
            "duration": 0.5,
            "grow_up": { "event": "init_over", "target": "self" }
          }
        },
        "life":{
          "minecraft:ageable": {
            "duration": 180,
            "grow_up": { "event": "despawn", "target": "self" }
          }
        },
        "init_over":{
          "minecraft:type_family": {
            "family": [ "inanimate", "powerpoint" ]
          }
        },
        "scan":{
          "minecraft:entity_sensor": {
            "sensor_range": 8,
            "relative_range": false,
            "minimum_count": 1,
            "maximum_count": 99,
            "event_filters": {
              "any_of":[
                { "test": "distance_to_nearest_player", "subject" : "self", "operator": "<", "value" : 8}
              ]
            },
            "event": "thlm:pps"
          }
        }
      },
      "components": {
        "minecraft:collision_box": { "width": 0, "height": 0 },
        "minecraft:damage_sensor": {
          "triggers": [
            {
              "on_damage": {
                "filters": {
                  "all_of": [ { "test": "is_family",  "subject": "other","value": "player" } ]
                }
              },
              "deals_damage": false
            },
            {
              "cause": "fall",
              "deals_damage": false
            },
            {
              "on_damage": {
                "filters": {
                  "none_of": [
                    {
                      "test": "is_family",
                      "subject": "other",
                      "value": "player"
                    }
                  ]
                },
                "event": "despawn"
              },
              "deals_damage": false
            }
          ]
        },
        "minecraft:friction_modifier":{ "value": 1 },
        "minecraft:type_family": { "family": [ "inanimate" ] },

        "minecraft:health": { "value": 5, "max": 5 },
        "minecraft:buoyant":{
          "apply_gravity": false,
          "liquid_blocks": ["minecraft:flowing_water", "minecraft:water"] 
        },
        "minecraft:physics": { "has_collision": true, "push_towards_closest_space": true },
        "minecraft:pushable": { "is_pushable": false, "is_pushable_by_piston": true },
        "minecraft:conditional_bandwidth_optimization": {
          "default_values": {
            "max_optimized_distance": 80.0,
            "max_dropped_ticks": 10,
            "use_motion_prediction_hints": true
          }
        }
      }
      ,
      "events": {
        "despawn"   :{ "add": { "component_groups": [ "despawn" ] } },
        "scan_start":{
          "sequence": [ {
              "filters": { "test": "is_family", "subject": "self", "value": "powerpoint" },
              "add":{ "component_groups": [ "scan" ] }
          } ]
        },
        "scan_stop" :{ "remove": { "component_groups": [ "scan" ] } },
        "init_over":{
          "sequence": [{
            "remove": { "component_groups": [ "init" ] },
            "add": { "component_groups": [ "init_over", "scan", "life" ] }
          }]
        },
        "init_random":{
          "randomize": [
            { "trigger": "init_p1", "weight": 1 },
            { "trigger": "init_p2", "weight": 1 },
            { "trigger": "init_p3", "weight": 1 },
            { "trigger": "init_p4", "weight": 1 }
          ]
        },
        "init_p1":{
          "sequence": [
            { "add": { "component_groups": [ "p1", "init" ] } },
            { "trigger": "thlm:ppi" }
          ]
        },
        "init_p2":{
          "sequence": [
            { "add": { "component_groups": [ "p2", "init" ] } },
            { "trigger": "thlm:ppi" }
          ]
        },
        "init_p3":{
          "sequence": [
            { "add": { "component_groups": [ "p3", "init" ] } },
            { "trigger": "thlm:ppi" }
          ]
        },
        "init_p4":{
          "sequence": [
            { "add": { "component_groups": [ "p4", "init" ] } },
            { "trigger": "thlm:ppi" }
          ]
        },
        "init_f":{
          "sequence": [
            { "add": { "component_groups": [ "f", "init" ] } },
            { "trigger": "thlm:ppi" }
          ]
        },
        "init_ns_p1":{ "add": { "component_groups": [ "p1", "init" ] } },
        "init_ns_p2":{ "add": { "component_groups": [ "p2", "init" ] } },
        "init_ns_p3":{ "add": { "component_groups": [ "p3", "init" ] } },
        "init_ns_p4":{ "add": { "component_groups": [ "p4", "init" ] } },
        "init_ns_f":{ "add": { "component_groups": [ "f", "init" ] } },
        "thlm:ppi":{},
        "thlm:pps":{}
      }
    }
  }